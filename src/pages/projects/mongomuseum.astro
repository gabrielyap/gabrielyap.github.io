---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import aivferrors from "../../assets/AIVFErrors.png";
import aivffunctions from "../../assets/AIVFFunctions.png";
import aivfmobile from "../../assets/AIVFMobile.png";
import mmhomepage from "../../assets/MMHomepage2.png";
---

<Layout title="Mongo Museum -- Gabriel Yap">
    <main class="mt-12 border-0 border-blue-500">
        <div>
            <h1 class="flex justify-center text-6xl">Mongo Museum</h1>
            <hr
                class="w-48 h-1 mx-auto my-4 bg-gray-200 border-0 rounded md:my-10 dark:bg-gray-700"
            />
            <h2 class="flex justify-center mx-auto w-1/2 font-light">
                A fullstack image sharing and hosting app I made using the MERN
                stack, Tailwind, and Next.js. The app is complete with user
                authentication/authorization, comments, a label-based search
                function, a custom backend server to handle CRUD operations, and more. 
            </h2>
          
            <div class="flex justify-center mx-auto w-3/4 font-light my-10">
                <Image
                    src={mmhomepage}
                    alt="aivfhome"
                    width={1525}
                    height={884}
                    loading="eager"
                    quality={100}
                />
            </div>
        </div>
        <div class="my-12">
            <h1 class="flex justify-center text-4xl my-4">Features</h1>
            <hr
                class="w-48 h-1 mx-auto my-4 bg-gray-200 border-0 rounded md:my-10 dark:bg-gray-700"
            />
        </div>
        <section
            class="grid grid-cols-2 items-start justify-center pt-12 gap-8 md:max-w-full md:flex-row"
        >
            <div class="flex justify-center mx-auto font-light">
                <Image
                    src={mmhomepage}
                    alt="aivfhome"
                    width={1525}
                    height={884}
                    loading="eager"
                    quality={100}
                />
            </div>
            <div class="flex justify-center mx-auto font-light">
                <Image
                    src={mmhomepage}
                    alt="aivfhome"
                    width={1525}
                    height={884}
                    loading="eager"
                    quality={100}
                />
            </div>
        </section>
    </main>
</Layout>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Palanquin:wght@100;200;300;400;500;600;700&display=swap");
</style>
