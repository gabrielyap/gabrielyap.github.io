---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class = "scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Gabriel Yap's personal website" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class="mx-auto max-w-screen-2xl dark:bg-neutral-900 px-12 font-sans text-black dark:text-white xs:text-[16px] md:text-[18px]">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
</style>
