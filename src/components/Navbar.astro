---
import { Astronav, MenuIcon, MenuItems } from "astro-navbar";
import ThemeToggle from "./ui/ThemeToggle.astro";

const menuItems = [
	{
		title: "Home",
		path: "/",
	},
	{
		title: "About",
		path: "/about",
	},
	{
		title: "Experiences",
		path: "/#experiences",
	},
	{
		title: "Projects",
		path: "/#projects",
	},
];
---

<!-- Styled for dropdown/mobile then use md: for desktop view -->
<header
	class="my-4 flex flex-col md:flex-row items-center justify-between font-light"
>
	<Astronav>
		<div class="flex w-full items-center justify-between md:w-auto">
			<a
				href="/"
				class="text-4xl font-normal md:font-extralight hover:text-teal-500"
				>GABRIEL YAP</a
			>
			<div class="md:hidden">
				<MenuIcon class="h-4 w-4 text-black dark:text-white" />
			</div>
		</div>

		<MenuItems class="hidden md:flex mt-3 md:mt-0 w-full md:w-auto">
			<div class="flex flex-col md:flex-row md:gap-3">
				{
					menuItems.map((item) => (
						<a
							href={item.path}
							aria-label={item.title}
							class="flex w-min py-2 text-black dark:text-white hover:text-teal-500 dark:hover:text-teal-500 md:px-3"
						>
							{item.title}
						</a>
					))
				}
				<div class="mt-3">
					<ThemeToggle />
				</div>
			</div>
		</MenuItems>
	</Astronav>
	<!-- <div class = "flex absolute left-1/2 py-8 border-2">  centered name div add or remove
		Gabriel Yap
	</div> -->
</header>
