---
interface Props {
	title: string;
	body: string;
	href: string;
	thumbnail: string;
}
import { Image } from 'astro:assets';

const { title, body, href, thumbnail } = Astro.props;
---
<div class = "flex flex-col items-center md:flex-row px-4 gap-8 border-2 border-amber-400">
	<div class = "flex">
		<Image src = {import(`../../assets/${thumbnail}.jpg`)} alt = {title} width = {500} height = {500} loading = "eager" quality={100}/>
	</div>
	<div class = "flex flex-col h-full items-stretch w-3/4 justify-center gap-4 bg-lightbrown dark:bg-gray-900 p-4 md:p-16 border-2 border-green-300 ">
		<h2 class = "text-4xl  lg:text-6xl ">
			{title}
		</h2>
		<p class = "lg:text-2xl">
			{body}
		</p>
		<a href = {href} class = "flex w-fit px-8 py-2 border-2 border-black dark:border-white hover:bg-slate-300 dark:hover:bg-slate-700">
			SEE MORE
		</a>
	</div>
	
</div>
	

